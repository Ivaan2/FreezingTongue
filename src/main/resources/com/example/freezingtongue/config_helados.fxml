<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.freezingtongue.ConfigHelados">
   <children>
      <Pane prefHeight="650.0" prefWidth="600.0" style="-fx-background-color: pink;">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutY="150.0" prefHeight="23.0" prefWidth="600.0" style="-fx-background-color: #fde992;" text="Elige el sabor" textAlignment="RIGHT">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutY="0" prefHeight="23.0" prefWidth="600.0" style="-fx-background-color: #fde992;" text="Elige el tamaño" textAlignment="RIGHT">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutY="450.0" prefHeight="23.0" prefWidth="600.0" style="-fx-background-color: #fde992;" text="Elige un topping" textAlignment="RIGHT">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <!--TAMAÑO-->
            <Button fx:id="btnTamPeque" layoutX="100.0" layoutY="70.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #8a721b;" text="Pequeño" textFill="#fde992" />
            <Button fx:id="btnTamMediano" layoutX="250.0" layoutY="70.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #8a721b;" text="Mediano" textFill="#fde992" />
