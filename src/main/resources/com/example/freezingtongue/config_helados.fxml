            <Button fx:id="btnSabNata" layoutX="250.0" layoutY="410.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #8a721b;" text="Nata" textFill="#fde992" />

            <ImageView fitHeight="90.0" fitWidth="100.0" layoutX="400.0" layoutY="310.0" pickOnBounds="true" preserveRatio="true" />
            <Button fx:id="btnSabStra" layoutX="400.0" layoutY="410.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #8a721b;" text="Stracciatella" textFill="#fde992" />

            <!--TOPPING-->
            <ImageView fitHeight="90.0" fitWidth="100.0" layoutX="100.0" layoutY="480.0" pickOnBounds="true" preserveRatio="true" />
            <Button fx:id="btnTopGalleta" layoutX="100.0" layoutY="580.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #8a721b;" text="Galleta" textFill="#fde992" />

            <ImageView fitHeight="90.0" fitWidth="100.0" layoutX="250.0" layoutY="480.0" pickOnBounds="true" preserveRatio="true" />
            <Button fx:id="btnTopOreo" layoutX="250.0" layoutY="580.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #8a721b;" text="Oreo" textFill="#fde992" />

            <ImageView fitHeight="90.0" fitWidth="100.0" layoutX="400.0" layoutY="480.0" pickOnBounds="true" preserveRatio="true" />
            <Button fx:id="btnTopLacasitos" layoutX="400.0" layoutY="580.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #8a721b;" text="Lacasitos" textFill="#fde992" />

         </children>
      </Pane>
   </children>
</AnchorPane>
