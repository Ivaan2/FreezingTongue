            <ImageView fitHeight="90.0" fitWidth="100.0" layoutX="400.0" layoutY="180.0" pickOnBounds="true" preserveRatio="true" />
            <Button fx:id="btnSabChocolate" layoutX="400.0" layoutY="275.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #8a721b;" text="Chocolate" textFill="#fde992" />

            <ImageView fitHeight="90.0" fitWidth="100.0" layoutX="100.0" layoutY="310.0" pickOnBounds="true" preserveRatio="true" />
            <Button fx:id="btnSabTurron" layoutX="100.0" layoutY="410.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #8a721b;" text="Turrón" textFill="#fde992" />

